<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.logindemo.activity.personcenter.impl.MapSelectAddressActivity">


    <LinearLayout
        android:background="#555555"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:id="@+id/iv_activity_map_select_address_return"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="地图选址"
            android:textSize="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/iv_activity_map_select_address_share"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_width="45dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <Button
            android:id="@+id/btn_activity_map_select_address_normal"
            android:textSize="@dimen/dp_10"
            android:text="普通地图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_activity_map_select_address_satellite"
            android:textSize="@dimen/dp_10"
            android:text="卫星地图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_activity_map_select_address_traffic"
            android:textSize="@dimen/dp_10"
            android:text="实时交通地图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_activity_map_select_address_heat"
            android:textSize="@dimen/dp_10"
            android:text="空白地图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <com.baidu.mapapi.map.MapView

        android:id="@+id/mv_activity_map_select_address_map"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.baidu.mapapi.map.MapView>
</LinearLayout>
