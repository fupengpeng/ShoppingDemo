<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.logindemo.activity.personcenter.impl.DataActivity">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:text="完善会员资料"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" />
        <View
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:text="收货人："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_activity_data_username"
                android:gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:text="性别："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <RadioGroup
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="男"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="女"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:text="所在地："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_activity_data_province_city"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <!--todo  待完善-->
            <TextView
                android:gravity="center|left"
                android:text="生日："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:layout_gravity="center"
                android:background="@null"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:text="微信号："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_activity_data_we_chat"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_activity_data_confirm"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:text="确认修改"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50" />


    </LinearLayout>

</ScrollView>
